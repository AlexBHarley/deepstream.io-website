<link rel="stylesheet" type="text/css" href="{{asset 'css/community.css'}}" />
<link rel="stylesheet" type="text/css" href="{{asset 'css/blog.css'}}" />

<div id="wrapper" class="blog-wrapper">
  <div class="post">

    <header class="post-header">
      <h1 class="post-title">{{title}}</h1>
      <section class="post-meta">
        By {{blog.author.name}}
        <span class="post-date">{{blog.date}}</span>
      </section>
    </header>

    <section class="post-content">
{{{contents}}}
    </section>

    <footer class="post-footer">

      <section class="author">

        <img class="author-gravatar" src="{{blog.author.gravatar}}">

        <span class="author-description">
          <h4>About the author</h4>

          <p class="author-bio">
            {{blog.author.bio}}
          </p>
        </span>

        <!--
          <p>Read <a href="{{url}}">more posts</a> by this author.</p>

        <div class="author-meta">
          {{#if location}}<span class="author-location icon-location">{{location}}</span>{{/if}}
          {{#if website}}<span class="author-link icon-link"><a href="{{website}}">{{website}}</a></span>{{/if}}
        </div>
        -->

      </section>

      <section class="share">
        <h4>Share this post</h4>
        <ul class="icons">
          <li>
            <a class="icon fa fa-twitter" href="//twitter.com/share?text={{title}} @deepstreamhub&amp;url={{url absolute="true"}}"
              onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
              <span class="label">Twitter</span>
            </a>
          </li>
          <li>
            <a class="icon fa fa-facebook" href="//www.facebook.com/sharer/sharer.php?u={{url}}"
            onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
            <span class="label">Facebook</span>
            </a>
          </li>
          <li>
            <a class="icon fa fa-google-plus" href="//plus.google.com/share?url={{url}}"
             onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
            <span class="label">Google+</span>
          </a>
          </li>
        </ul>

      </section>

    {{> blog-latest}}
    </footer>
  </div>

  {{> blog-sidebar}}
</div>